{
  "name": "create-solidified",
  "private": true,
  "type": "module",
  "module": "src/index.tsx",
  "scripts": {
    "dev": "bun --bun run src/index.tsx",
    "format": "oxfmt --write .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@opentui/core": "^0.1.68",
    "@opentui/react": "^0.1.68",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "husky": "^9.1.7",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "bun run lint:fix"
    ],
    "*": [
      "bun run format"
    ]
  }
}
